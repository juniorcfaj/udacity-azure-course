{
    "type": "Microsoft.Authorization/policyDefinitions",
    "name": "tagging-policy", 
    "properties": {
        "mode": "Indexed",
        "displayName": "Tagging Policy",
        "description": "This policy ensures all indexed resources in your subscripiton have tags and denies deployment if they do not",
        "policyRule": {
            "if": {
                "allof": [
                    {
                        "field": "tags",
                        "exists": "False"
                    }
                ]
            },
            "then": {
                "effect": "deny"
            }
        }
    }
}